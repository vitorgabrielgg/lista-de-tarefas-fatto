generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Tarefa {
  id                Int      @id @default(autoincrement())
  nome              String
  custo             Float
  dataLimite        DateTime
  ordemApresentacao Int      @default(autoincrement())
}
